<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/goose_screenshot_03"
    tools:context=".AboutActivity">

    <LinearLayout
        android:layout_width="682dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/transport_medium"
            android:text="About "
            android:textColor="@color/utg_white_text"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/transport_medium"
            android:padding="10dp"
            android:text="The goose is bugging the townfolks again. Can you find the pesky bird?"
            android:textAlignment="viewStart"
            android:textColor="@color/utg_white_text"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/transport_medium"
            android:text="@string/instructions"
            android:textAlignment="textStart"
            android:textColor="@color/utg_white_text" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/transport_medium"
                android:padding="10dp"
                android:text="By mql@sfu.ca "
                android:textColor="@color/utg_white_text" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:clickable="true"
                android:contextClickable="false"
                android:fontFamily="@font/transport_medium"
                android:linksClickable="true"
                android:padding="10dp"
                android:text="https://opencoursehub.cs.sfu.ca/bfraser/grav-cms/cmpt276/home"
                android:textColor="@color/utg_white_text"
                android:textColorLink="@android:color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/transport_medium"
            android:text="References"
            android:textColor="@color/utg_white_text"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contextClickable="false"
            android:fontFamily="@font/transport_medium"
            android:linksClickable="true"
            android:longClickable="false"
            android:text="Arts: https://goose.game/"
            android:textColor="@color/utg_white_text" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contextClickable="false"
            android:fontFamily="@font/transport_medium"
            android:linksClickable="true"
            android:longClickable="false"
            android:text="Sounds: https://www.sounds-resource.com/pc_computer/untitledgoosegame/"
            android:textColor="@color/utg_white_text" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contextClickable="false"
            android:fontFamily="@font/transport_medium"
            android:linksClickable="true"
            android:longClickable="false"
            android:text="Animations: https://drive.google.com/file/d/1A7ILIC4e7wgBlerT2_sn0O026QNq35cc/view"
            android:textColor="@color/utg_white_text" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>