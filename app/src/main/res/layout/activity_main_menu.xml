<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/goose_screenshot_11"
    tools:context=".MainMenuActivity"
    >

    <TextView
        android:id="@+id/textView_mainActTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginRight="244dp"
        android:text="@string/goose_finder"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="35sp"
        android:fontFamily="@font/transport_medium"
        android:textColor="@color/utg_white_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.125" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="@+id/textView_mainActTitle"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="@+id/textView_mainActTitle"
        app:layout_constraintTop_toBottomOf="@+id/textView_mainActTitle"
        >

        <Button
            android:id="@+id/btnPlay"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/play"
            android:textSize="24sp"
            android:fontFamily="@font/transport_medium"
            android:textColor="@color/utg_white_text"
            android:backgroundTint="#bdbdbd"
           />

        <Button
            android:id="@+id/btnOptions"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/options"
            android:fontFamily="@font/transport_medium"
            android:textColor="@color/utg_white_text"
            android:backgroundTint="#bdbdbd"
            />

        <Button
            android:id="@+id/btnAbout"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/about"
            android:fontFamily="@font/transport_medium"
            android:textColor="@color/utg_white_text"
            android:backgroundTint="#bdbdbd"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>